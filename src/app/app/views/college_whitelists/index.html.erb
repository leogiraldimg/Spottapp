<div>
  <div class="row">
    <div class="col-xs-4">
      <table>
        <thead>
          <tr>
            <th>Pendentes</th>
            <th colspan="3"></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @college_whitelists.each do |college_whitelist| %>
            <% if (college_whitelist.status == 'pending') %>
              <tr>

<div class='container-fluid'>
  <div class='row py-3 px-3'>
    <div class='col-xs-12'>

      <h3>Minhas faculdades favoritas</h3>

      <table id='favorite-college-table' class="table table-hover">
        <thead  class="thead-light">
          <tr>
            <th>Nome</th>
            <th>Sigla</th>
            <th>Spotted</th>
            <th style="text-align: center">Favoritar</th>
          </tr>
        </thead>

        <tbody>
          <% @favorite_colleges.each do |fav| %>

            <tr>
              <td><%= fav.college.name %></td>
              <td><%= fav.college.initials %></td>
              <td><%= link_to 'Abrir', college_spotteds_path(college_id: fav.college.id) %></td>

              <% if already_favorited(fav.college.id) %>
                <td style="text-align: center"><%= link_to image_tag('star.png'), favorite_college_path(fav.college, type: "unfavorite"), method: :put %></td>
              <% else %>
                <td style="text-align: center"><%= link_to image_tag('star-white.png'), favorite_college_path(fav.college, type: "favorite"), method: :put %></td>
              <% end %>
            </tr>

          <% end %>
        </tbody>
      </table>

      <br>
    </div>
  </div>
</div>


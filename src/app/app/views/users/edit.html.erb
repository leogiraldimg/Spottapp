<div class="user" id="edit">

    <div class="jumbotron">
        <h2 class="title">Alterar dados</h2>
        <div class="profile-picture">
            <% if current_user.profile_picture? %>
                <img src="data:image;base64,<%= current_user.profile_picture %>" class="img-responsive" alt="Profile picture">
            <% else %>
                <%= image_tag 'default_profile_picture.png', alt: 'Profile picture', class: 'img-responsive', style: "width: 40px; height: 40px; float: left;" %>
            <% end %>  
        </div>

        <div class="data">
            <%= form_for(@user) do |f| %>

                <%= render 'layouts/error_messages', object: f.object %>

                <div class="picture">
                    <%= f.label :profile_picture do %>
                        <i class="fa fa-upload fa-2x" aria-hidden="true"></i> Alterar imagem de perfil
                    <% end %>
                    <%= f.file_field :profile_picture, class: 'form-control', accept: 'image/jpeg, image/png' %>
                </div>

                <div class="file">Nenhum arquivo selecionado.</div>

                <hr>

                <div class="box">
                    <div class="left">
                        <%= f.label :first_name %>
                        <%= f.text_field :first_name, class:'form-control' %>
                    </div>

                    <div class="right">
                        <%= f.label :last_name %>
                        <%= f.text_field :last_name, class:'form-control' %>
                    </div>
                </div>

                <div class="box">
                    <div class="left">
                        <%= f.label :nickname %>
                        <%= f.text_field :nickname, class:'form-control' %>
                    </div>

                    <div class="right">
                        <%= f.label :birth_date %>
                        <%= f.date_field :birth_date, class:'form-control' %>
                    </div>
                </div>

                <div class="email">
                    <%= f.label :email %>
                    <%= f.text_field :email, class:'form-control' %>
                </div>

                <hr>

                <div class="box">
                    <div class="left">
                        <%= f.label :password %>
                        <%= f.password_field :password, class:'form-control' %>
                    </div>

                    <div class="right">
                        <%= f.label :password_confirmation %>
                        <%= f.password_field :password_confirmation, class:'form-control' %>
                    </div>
                </div>
                
                <hr>
                
                <div class="box">
                    <div class="left">
                        <%= f.label :country %>
                        <%= f.text_field :country, class:'form-control' %>
                    </div>

                    <div class="right">
                        <%= f.label :state %>
                        <%= f.text_field :state, class:'form-control' %>
                    </div>
                </div>

                <div class="city">
                    <%= f.label :city %>
                    <%= f.text_field :city, class:'form-control' %>
                </div>
                
                <hr>

                <div class="save">
                    <%= f.submit "Salvar", class: "botao" %>
                </div>

            <% end %>
        </div>
    </div>

</div>
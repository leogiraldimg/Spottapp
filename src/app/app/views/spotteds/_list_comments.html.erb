<div id="list-comment">

    <% @comments.each do |comment| %>
        <div class="comment-container">
            <% if current_user.id == comment.user.id %> 
                <% if comment.user.profile_picture? %> 
                    <img src="data:image;base64,<%= comment.user.profile_picture %>" class="img-responsive" style="width: 40px; height: 40px; float: left; border-radius: 50px; margin-right: 5px;" alt="Profile picture">
                <% else %>
                    <%= image_tag 'default_profile_picture.png', alt: 'Profile picture', class: 'img-responsive', style: "width: 40px; height: 40px; float: left; margin-right: 5px;" %>
                <% end %>
                <div class="dropdown">
                    <label>
                        <%= comment.user.first_name + ' ' + comment.user.last_name %>
                    </label>
                    <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            <%= link_to spotted_comment_path(@spotted, comment), method: :delete, data: { confirm: "Você tem certeza que deseja apagar este comentário? Essa ação não pode ser desfeita." }, id: "trash-bt" do %>
                                <i class="fa fa-trash fa-lg"  style="color:black"></i>
                                Apagar comentário
                            <% end %>
                        </li>
                        <li>
                            <%= link_to "#", method: :get do %>
                                <i class="fa fa-pencil fa-lg"  style="color:black"></i>
                                Editar comentário
                            <% end %>
                        </li>
                    </ul>
                </div>
            <% else %>
                <% if comment.user.profile_picture? %> 
                    <img src="data:image;base64,<%= comment.user.profile_picture %>" class="img-responsive" style="width: 40px; height: 40px; float: left; border-radius: 50px; margin-right: 5px;" alt="Profile picture">
                <% else %>
                    <%= image_tag 'default_profile_picture.png', alt: 'Profile picture', class: 'img-responsive', style: "width: 40px; height: 40px; float: left; margin-right: 5px;" %>
                <% end %>
                <label>
                    <%= comment.user.first_name + ' ' + comment.user.last_name %>
                </label>
            <% end %>   

            <div class="comentario">
                <p><%= comment.content %></p>
            </div>
        </div>
    <% end %>

</div>
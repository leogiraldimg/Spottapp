<div class="session" id="new">

    <div class="jumbotron">
        <div class="login-area">
            <div class="login-information">
                
                <%= form_for :session, url: entrar_path, method: :post do |f| %>

                    <div class="box">
                        <label for="login">Login</label>
                        <div class="input-group margin-bottom-sm">                    
                            <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw"></i></span>
                            <%= f.text_field :email, placeholder: 'Email ou usuÃ¡rio', class: 'form-control' %>
                        </div>
                    </div>

                    <div class="box">
                        <label for="senha">Senha</label>
                        <div class="input-group margin-bottom-sm">
                            <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                            <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
                        </div>
                    </div>

                    <%= f.submit 'Entrar', class: 'botao' %>

                <% end %>
            </div>
        </div>
    </div>

</div>

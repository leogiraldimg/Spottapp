<div class='container'>
  <div class='row'>
    <div class='col-4' align='center'>
      <h2 align='center'>Menu de Faculdades </h2>
      <% @colleges.each do |college| %>
        <div class="block">
          <a class="overlay" href="<%=college_spotteds_path(college_id: college.id) %>"><%= college.name %></a>
          <div class="inner">
            <% if already_favorited(college.id) %>
              <p><%= link_to image_tag('star.png'), favorite_college_path(college, type: "unfavorite"), method: :put %></p>
            <% else %>
              <p><%= link_to image_tag('star-white.png'), favorite_college_path(college, type: "favorite"), method: :put %></p>
            <% end %>
          </div>
        </div>
	  <%end%>
	  <br>
      	<p><%= link_to 'Criar nova pÃ¡gina', new_college_path, class: 'btn btn-primary' %></p>
      <br>
    </div>
  </div>
</div>


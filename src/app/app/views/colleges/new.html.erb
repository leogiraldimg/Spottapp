<div class="row">
    <div class="col-xs-12">
        <h1>Cadastre sua faculdade</h1>
    </div>
</div>

<%= form_for @college do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>
    <div class="form-group row">
        <div class="col-xs-12 col-md-6">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-md-6">
            <%= f.label :initials %>
            <%= f.text_field :initials, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-md-6">
            <%= f.label :city %>
            <%= f.text_field :city, class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-md-6">
            <%= f.label :state %>
            <%= f.text_field :state, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-md-6">
            <%= f.label :country %>
            <%= f.text_field :country, class: 'form-control' %>
        </div>
        <div class="col-xs-12 col-md-6">
            <%= f.label :unit %>
            <%= f.text_field :unit, class: 'form-control' %>
        </div>
    </div>
    <legend><%= translate 'identidade_visual' %></legend>
    <div class="form-group row">
        <div class="col-xs-12 col-md-3">
            <%= f.label :background_color %>
            <%= f.color_field :background_color, class:"form-control" %>
        </div>
        <div class="col-xs-12 col-md-3">
            <%= f.label :font_family %>
            <%= f.text_field :font_family, class:"form-control" %>
        </div>
        <div class="col-xs-12 col-md-3">
            <%= f.label :background_image %>
            <%= f.text_field :background_image, class:"form-control" %>
        </div>
        <div class="col-xs-12 col-md-3">
            <%= f.label :font_color %>
            <%= f.color_field :font_color, class:"form-control" %>
        </div>
    </div>
    <legend><%= translate 'administracao' %></legend>
    <div class="form-group row">
        <div class="col-md-3 col-xs-12">
            <%= f.label :request_to_participate %>
            <%= f.select :request_to_participate, ([['Sim', 1], ['NÃ£o', 0]]), {}, { class: "form-control"} %>
        </div>
        <div class="col-md-3 col-xs-12">
            <%= f.label :admin_approves_spotted %>
            <%= f.select :admin_approves_spotted, ([['Manual', 1], ['AutomÃ¡tica', 0]]), {}, { class: "form-control"} %>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-12 col-md-6">
            <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>
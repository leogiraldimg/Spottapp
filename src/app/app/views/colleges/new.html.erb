<div class="colleges" id="new">

    <div class="jumbotron">
        <h2 class="title">Cadastre sua faculdade</h2>

        <div class="form">
            <%= form_for @college do |f| %>
                <%= render 'layouts/error_messages', object: f.object %>

                <div class="box">
                    <div class="left">
                        <%= f.label :name %>
                        <%= f.text_field :name, class: 'form-control' %>
                    </div>
                    <div class="right">
                        <%= f.label :initials %>
                        <%= f.text_field :initials, class: 'form-control' %>
                    </div>
                </div>

                <div class="box">
                    <div class="left">
                        <%= f.label :city %>
                        <%= f.text_field :city, class: 'form-control' %>
                    </div>
                    <div class="right">
                        <%= f.label :state %>
                        <%= f.text_field :state, class: 'form-control' %>
                    </div>
                </div>

                <div class="box">
                    <div class="left">
                        <%= f.label :country %>
                        <%= f.text_field :country, class: 'form-control' %>
                    </div>
                    <div class="right">
                        <%= f.label :unit %>
                        <%= f.text_field :unit, class: 'form-control' %>
                    </div>
                </div>

                <legend><%= translate 'identidade_visual' %></legend>
                
                <div class="box">
                    <div class="left small">
                        <%= f.label :font_color %>
                        <%= f.color_field :font_color, class:"form-control" %>
                    </div>
                    <div class="right big">
                        <%= f.label :font_family %>
                        <%= f.text_field :font_family, class:"form-control" %>
                    </div>
                </div>

                <div class="box">
                    <div class="left small">
                        <%= f.label :background_color %>
                        <%= f.color_field :background_color, class:"form-control" %>
                    </div>
                    <div class="right big">
                        <%= f.label :background_image %>
                        <%= f.text_field :background_image, class:"form-control" %>
                    </div>
                </div>

                <legend><%= translate 'administracao' %></legend>
                
                <div class="box">
                    <div class="left">
                        <%= f.label :request_to_participate %>
                        <%= f.select :request_to_participate, ([['Sim', 1], ['NÃ£o', 0]]), {}, { class: "form-control"} %>
                    </div>
                    <div class="right">
                        <%= f.label :admin_approves_spotted %>
                        <%= f.select :admin_approves_spotted, ([['Manual', 1], ['AutomÃ¡tica', 0]]), {}, { class: "form-control"} %>
                    </div>
                </div>

                <div class="register">
                    <%= f.submit 'Cadastrar', class: 'botao' %>
                </div>
            <% end %>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-xs-12">
        <h1>Cadastre sua faculdade</h1>
</div>

<%= form_for @college do |f| %>
    <%= render 'layouts/error_messages', object: f.object %>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :initials %>
                <%= f.text_field :initials, class: 'form-control' %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :city %>
                <%= f.text_field :city, class: 'form-control' %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :state %>
                <%= f.text_field :state, class: 'form-control' %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :country %>
                <%= f.text_field :country, class: 'form-control' %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :unit %>
                <%= f.text_field :unit, class: 'form-control' %>
            </div>
        </div>
    </div>
    <legend><%= translate 'identidade_visual' %></legend>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :background_color %>
                <%= f.color_field :background_color, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :font_family %>
                <%= f.text_field :font_family, class:"form-control" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :background_image %>
                <%= f.text_field :background_image, class:"form-control" %>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class=form-group>
                <%= f.label :font_color %>
                <%= f.color_field :font_color, class:"form-control" %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-6 col-md-6">
            <%= f.submit 'Cadastrar', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>